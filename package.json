{
	"name": "nodejs-prebuild-action",
	"version": "0.0.0",
	"type": "module",
	"description": "A GitHub Action for setting up useful stuff in NodeJS workflows.",
	"scripts": {
		"build": "tsc",
		"lint": "eslint --max-warnings=0 ./src/",
		"test": "vitest run",
		"bootstrap": "npm install && npm run build && npm prune --production"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/cache": "^5.0.0",
		"@actions/core": "^2.0.0",
		"@actions/exec": "^3.0.0",
		"reflect-metadata": "^0.2.2",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@tsconfig/node20": "^20.1.6",
		"@types/source-map-support": "^0.5.6",
		"eslint": "^9.36.0",
		"github-actions-problem-matcher-typings": "^1.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.45.0",
		"vitest": "^3.1.3"
	}
}
